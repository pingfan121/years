<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Expires" content="0">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Cache-control" content="no-cache">
    <meta http-equiv="Cache" content="no-cache">
    <link href="~/Content/CSS/zui.css" rel="stylesheet" />
    @*<link href="~/Content/CSS/zui-blog-theme.css" rel="stylesheet" />*@
    <link href="~/Content/CSS/zui-theme-blue.css" rel="stylesheet" />
    <link href="~/Content/CSS/HomeIndex.css" rel="stylesheet" />
    <link href="~/Content/CSS/pagerstyles.css" rel="stylesheet" />
    <link href="~/Content/CSS/page_head.css?v=@DateTime.Now.ToString()" rel="stylesheet" />
    <title>@ViewBag.Title - 岁月</title>
</head>

<body>
    <!--导航部分-->
    @Html.Partial("LeftNav")
    @Html.Partial("_NavbarPage")
    <!--主体内容-->
    <div style="margin-top:50px">
            @RenderBody()
    </div>
    <!--主题部分-->
    <!--底部版权部分-->
    @Html.Partial("_FooterPage")

    @Scripts.Render("~/bundles/basejs")


    <script>

        //左侧导航菜单出现
        $('#menubtn').click(function () {
            $('.menu').fadeIn('100');
            setTimeout(function () {
                $('.menupage').css('margin-left', 0)
            }, 100)
        });

        $('.menu').click(function () {

            //if ($(this).attr('href') != null) {
            //    setTimeout("top.location.href = '" + $(this).attr('href') + "'", 400);
            //}
            $('.menupage').css('margin-left', '-250px')
            setTimeout(function () {
                $('.menu').fadeOut('100')
            }, 100)
            return false
        });

    </script>

    @RenderSection("scripts", required: false)
</body>
</html>